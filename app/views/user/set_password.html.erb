<% content_for(:page_title, "Set password for your user account")%>
<%= form_for :user do |f| %>
<div id="loginwindow1">
     
         <center>   <h3> Set account password </h3>

             <label for="password">Password</label><br/>
             <%= f.password_field :password, :size => '25'%><br/><br/>

            
             <label for="confirm_password">Confirm Password</label><br/>
             <%= f.password_field :password_confirmation, :size => '25'%><br/><br/>

             <input type="hidden" name="id" value="<%= params[:id] %>" />
       
        
               <input type="submit" id="button" value="Update Password" >
               <input type="reset" id="button" value="Cancel" ></center>
        </div><br/>
      
     
</div>
<% end %>
